---
import Layout from "@/layouts/Body.astro"
import { concatRelativeUrls, getBlogCollection } from "@/utils"

const posts = await getBlogCollection()

const page = {
	title: "Blog",
	description: "Blog description",
}
---

<Layout {...page}>
	<header>
		<h1>{page.title}</h1>
	</header>

	<section>
		<h2>Latest posts</h2>
		<ul>
			{posts.map((post) => (
				<li>
					<article>
						<header>
							<h3><a href={concatRelativeUrls(Astro.url.pathname, post.slug)} data-astro-prefetch>{post.data.title}</a></h3>
						</header>
						<p>{post.data.summary}</p>
					</article>
				</li>
			))}
		</ul>
	</section>
</Layout>

<style>
	article {
		position: relative;

		a {
			display: inline-block;
			text-decoration: none;
			color: inherit;

			&::before {
				content: "";
				position: absolute;
				inset: 0;
			}
		}
	}
</style>